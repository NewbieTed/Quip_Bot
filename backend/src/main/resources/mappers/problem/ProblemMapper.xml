<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.quip.backend.problem.mapper.database.ProblemMapper">

    <resultMap id="ProblemResultMap" type="com.quip.backend.problem.model.Problem">
        <id property="problemId" column="problem_id"/>
        <result property="question" column="question"/>
        <result property="choices" column="choices" typeHandler="com.quip.backend.config.handler.StringArrayTypeHandler"/>
        <result property="correctAnswerIndex" column="correct_answer_index"/>
        <result property="numAsked" column="num_asked"/>
        <result property="numCorrect" column="num_correct"/>
        <result property="mediaUrl" column="media_url"/>
        <result property="contributorId" column="contributor_id"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <resultMap id="ProblemDtoResultMap" type="com.quip.backend.problem.dto.ProblemDto">
        <id property="problemId" column="problem_id"/>
        <result property="question" column="question"/>
        <result property="choices" column="choices" typeHandler="com.quip.backend.config.handler.StringArrayTypeHandler"/>
        <result property="numAsked" column="num_asked"/>
        <result property="numCorrect" column="num_correct"/>
        <result property="mediaUrl" column="media_url"/>
    </resultMap>

    <select id="numProblems" resultType="int">
        SELECT COUNT(*) FROM problems
    </select>

    <select id="selectProblemDtoById" resultMap="ProblemDtoResultMap">
        SELECT problem_id, question, choices, num_asked, num_correct, media_url
        FROM problems
        WHERE problem_id = #{problemId}
    </select>

    <select id="selectRandomProblem" resultMap="ProblemResultMap">
        SELECT *
        FROM problems
        ORDER BY RANDOM()
        LIMIT 1
    </select>

    <select id="selectProblemById" resultMap="ProblemResultMap">
        SELECT *
        FROM problems
        WHERE problem_id = #{problemId}
    </select>

    <update id="updateProblemChoicesById">
        UPDATE problems
        SET choices = #{problem.choices, typeHandler=com.quip.backend.config.handler.StringArrayTypeHandler}
        WHERE problem_id = #{problemId}
    </update>

    <update id="updateProblemNumCorrectById">
        UPDATE problems
        SET num_correct = #{numCorrect}
        WHERE problem_id = #{problemId}
    </update>

    <update id="updateProblemNumAskedById">
        UPDATE problems
        SET num_asked = #{numAsked}
        WHERE problem_id = #{problemId}
    </update>

    <insert id="addProblem" parameterType="com.quip.backend.problem.dto.ProblemCreateDto" useGeneratedKeys="true" keyProperty="problemId">
        INSERT INTO problems (question, choices, correct_answer_index, num_asked, num_correct, media_url, contributor_id, created_at, updated_at)
        VALUES (#{problemCreateDto.question},
                #{problemCreateDto.choices, typeHandler=com.quip.backend.config.handler.StringArrayTypeHandler},
                #{problemCreateDto.correctAnswerIndex},
                #{problemCreateDto.numAsked},
                #{problemCreateDto.numCorrect},
                #{problemCreateDto.mediaUrl},
                #{problemCreateDto.contributorId},
                NOW(),
                NOW())
    </insert>
</mapper>