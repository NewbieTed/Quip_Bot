<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.quip.backend.problem.mapper.database.ProblemMapper">

    <resultMap id="ProblemResultMap" type="com.quip.backend.problem.model.Problem">
        <id property="id" column="id"/>
        <result property="question" column="question"/>
        <result property="serverId" column="server_id"/>
        <result property="mediaFileId" column="media_file_id"/>
        <result property="contributorId" column="contributor_id"/>
        <result property="problemCategoryId" column="problem_category_id"/>
        <result property="isValid" column="is_valid"/>
        <result property="createdBy" column="created_by"/>
        <result property="updatedBy" column="updated_by"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="selectByProblemCategoryId" resultMap="ProblemResultMap">
        SELECT id, question, server_id, media_file_id, contributor_id, problem_category_id, is_valid, created_by, updated_by, created_at, updated_at
        FROM problem
        WHERE problem_category_id = #{problemCategoryId}
    </select>


</mapper>